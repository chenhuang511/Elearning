{% extends "layouts/layout-dashboard.twig" %}

{% set page_group = "permission" %}

{% block page %}
    {# By putting this in a special block, we ensure that it will be set AFTER the default values are set in the parent template,
    but BEFORE the page itself is rendered. #}
    {% set page = page | merge({
    "title"       : title,
    "description" : "Roles management, add/remove Roles, etc."
    }) %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row" xmlns="http://www.w3.org/1999/html">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-wrench fa-fw"></i> {{ title }} </h3>
                </div>
                <div class='panel-body'>
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">Manage roles</a></li>
                        <li><a href="#">Allow role assignments</a></li>
                        <li><a href="#">Allow role overrides</a></li>
                        <li><a href="#">Allow role switches</a></li>
                    </ul>
                    <div class="table-responsive" style="padding-top: 30px">
                        <table id="table-roles" class=" table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th width="25%" >Role </th>
                                    <th width="35%" >Description </th>
                                    <th width="20%" >Short name </th>
                                    <th width="20%" >Edit </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for role in roles %}
                                    <tr>
                                        <td> <a href="#">{{ role.name }}</a> </td>
                                        <td>{{ role.description }}</td>
                                        <td>{{ role.shortname }}</td>
                                        <td >
                                            {% if role.sortorder != firstrole.sortorder %}
                                                <a href="#"><i class="glyphicon glyphicon-arrow-up fa-fw"></i></a>
                                            {% else %}
                                                <i class="glyphicon glyphicon-none fa-fw" ></i>
                                            {% endif %}
                                            {% if role.sortorder != lastrole.sortorder %}
                                                <a href="#"><i class="glyphicon glyphicon-arrow-down fa-fw"></i></a>
                                            {% else %}
                                                <i class="glyphicon glyphicon-none fa-fw" ></i>
                                            {% endif %}
                                                <a href="#"><i class="glyphicon glyphicon-cog fa-fw"></i></a>
                                            {% if undeletablerole[role.id] is not defined %}<a href="#"><i class="glyphicon glyphicon-remove fa-fw"></i></a>{% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a href="#">
                            <button type="button" class="btn btn-primary">
                                Add a new role
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_scripts %}
<script>

</script>
{% endblock %}
